@{
    ViewData["Title"] = "Make a Transaction";
}

<div class="container mt-5">
    <h2 class="text-center">Make a New Transaction</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 p-4">
                <form method="post" asp-controller="Transactions" asp-action="CreateTransaction">
                    <div class="mb-3">
                        <label for="emailToUser" class="form-label">Recipient Email:</label>
                        <input type="email" id="emailToUser" name="emailToUser" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="txtAmount" class="form-label">Amount:</label>
                        <input type="number" id="txtAmount" name="txtAmount" class="form-control" required min="1" step="0.01" />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Submit Transaction</button>
                </form>
                <a href="javascript:history.back()" class="btn btn-secondary mt-3 w-100">Go Back</a>
            </div>
        </div>
    </div>
</div>

